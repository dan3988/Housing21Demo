@page
@model IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="table-header d-flex justify-content-end">
    <a class="btn btn-outline-primary" href="/Edit">Add New</a>
</div>
<div class="table-wrapper text-center border rounded">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Email Address</th>
                <th>Telephone</th>
                <th>Last Updated</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.DateOfBirth</td>
                    <td>@item.EmailAddress</td>
                    <td>@item.Telephone</td>
                    <td>@((item.Modified ?? item.Created).ToLocalTime())</td>
                    <td>
                        <a href="/Edit/@item.Id">Edit</a>
                </tr>
            }
        </tbody>
    </table>
</div>
