@page
@model IndexModel
@{
	ViewData["Title"] = "Users";
}

@section Scripts {
	<script type="text/javascript">
		async function deleteUser(id) {
			const res = await fetch(`/api/Users/${id}`, {
				method: "DELETE"
			});

			if (res.ok) {
				location.reload();
			} else {
				alert("Failed to delete user");
			}
		}
	</script>
}

<div class="table-header d-flex justify-content-end gap-1">
	<a class="btn btn-outline-primary" href="/Edit">Add New</a>
	<a class="btn btn-outline-primary" href="/api/Users/csv">Download</a>
</div>
<div class="table-wrapper text-center border rounded">
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Date of Birth</th>
				<th>Email Address</th>
				<th>Telephone</th>
				<th>Last Updated</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model.Users)
			{
				<tr>
					<td>@item.FirstName @item.LastName</td>
					<td>@item.DateOfBirth</td>
					<td>@item.EmailAddress</td>
					<td>@item.Telephone</td>
					<td>@((item.Modified ?? item.Created).ToLocalTime())</td>
					<td>
						<a href="/Edit/@item.Id">Edit</a>
						<span class="action-sep"></span>
						<a href="#" onclick="deleteUser(@item.Id)">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
